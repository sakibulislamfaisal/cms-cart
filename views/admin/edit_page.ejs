<%- include('../_layouts/adminheader') %>
  
<h2 class="page-title">Edit Page</h2>
<a href="/admin/pages" class="btn btn-primary">Go Back to all pages</a>
<br><br>

<form method="post" action="/admin/pages/edit-page/<%= id %>">
    
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Enter Page Title">
    </div>
    
    <div class="form-group">
        <label for="">Slug</label>
        <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Enter Page Slug">
    </div>
    
    <div class="form-group">
        <label for="">Content</label>
        <textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Enter Page Content"><%= content %></textarea>
    </div>

   
    
    <button class="btn btn-success">Submit</button>
</form>
  <%- include('../_layouts/adminfooter') %>
